  <body class="home" itemscope itemtype="http://schema.org/WebPage">
    <div class="page-header">
   
      <div class="row" style="position: absolute;top: 50%;left:50%;transform: translate(-50%,-50%);">
        <div class="col-12">
          <h2 style="color: white;font-size: 50px;">BRUH Blogs</h2>
        </div>
     
        <div class="blog-blogs-menu">
          <a class="dropdown-item" href="/blog" style="color: white;" >All Blogs</a>
          <a class="dropdown-item" href="/blog/skin" style="color: white;">Skin</a>
          <a class="dropdown-item" href="/blog/hair" style="color: white;">Hair</a>
          <a class="dropdown-item" href="/blog/body" style="color: white;">Body</a>
        </div>
      </div>

    </div>
    <!-- #masthead -->

    <section id="content" role="main">
      <div class="section">
        <div class="containerblog">
          <div class="row">
            <div class="three-quarters-block">
              <div class="contentblog">
                <article
                  class="post hentry"
                  itemscope
                  itemprop="blogPost"
                  itemtype="<%=blog.imagePath%>"
                >
                  <header class="entry-header">
                    <h2 class="entry-title" itemprop="headline">
                      <%=blog.title%>
                    </h2>

                    <div class="entry-meta">
                      <span class="post-date">
                        <i class="fa fa-clock-o fa-fw"></i>
                        <span class="updated"><%=blog.createdAt%></span>
                      </span>
                      <!-- .post-date -->

                      <!-- <span class="post-author">
                        <i class="fa fa-user fa-fw"></i> Written by
                        <span class="vcard"

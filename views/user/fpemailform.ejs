<%- include ../partials/homeheader %>

    <div class="container p-t-30 p-b-20" style="height: 100vh; align-items: center">
        <div class="fgrid">
        
          <div class="section-header">
            <h1>Enter Your Email</h1>
            <hr class="hr--small" />
        </div>
            <% if(errorMsg !=null && errorMsg.length>0) {%>
                <div id="flash-msg" class="alert alert-danger"><%=errorMsg %></div>
                <%}%>
   <form action="/user/fpform" method="post" class="lform login">
    <div class="form__field">
        <label for="email" style="margin-bottom: 0px"
          ><svg class="icon" style="margin-top: auto; font-size: 20px">
            <use xlink:href="#icon-email"></use></svg
          ><span class="hidden">Email</span></label
        >
        <input
          id="email"
          type="text"
          name="email"
          class="form__input"
          placeholder="Email"
          required
        />
      </div>    
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <div class="form__field">
        <input type="submit" value="Submit" />
      </div>
   </form>
   </div>
